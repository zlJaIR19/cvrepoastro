const currentYear = new Date().getFullYear().toString();
---

<footer class="bg-gray-100 dark:bg-gray-800 py-8 print-hide">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Social Links -->
      <div class="flex space-x-4 mb-4 md:mb-0">
        {socialLinks.map((social) => (
          <a 
            href={social.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            aria-label={social.name}
          >
            <Fragment set:html={social.icon} />
          </a>
        ))}
      </div>
      
      <!-- Copyright -->
      <div class="text-gray-600 dark:text-gray-400 text-sm">
        &copy; {currentYear} <span data-i18n="footer.copyright">Todos los derechos reservados</span> <span data-i18n="footer.by">por</span> Your Name
      </div>
    </div>
  </div>
</footer>

<script>
  // Update year dynamically if needed
  document.addEventListener('DOMContentLoaded', () => {
    const yearElements = document.querySelectorAll('.current-year');
    const currentYear = new Date().getFullYear().toString();
    
    yearElements.forEach(el => {
      el.textContent = currentYear;
    });
  });
</script>
