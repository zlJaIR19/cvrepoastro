---
import "../styles/global.css";
import { getI18n } from "../i18n/utils";

const { lang } = getI18n(Astro.url);
---

<section id="education" class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white" data-i18n="education.title">Educación</h2>
  
  <div class="h-1 w-24 bg-blue-600 dark:bg-blue-400 mb-6"></div>
  
  <div class="space-y-6">
    <div class="mb-4" data-i18n-group="education.degrees[0]">
      <h3 class="text-xl font-semibold text-gray-800 dark:text-white" data-i18n-key="name">Ingeniería Informática</h3>
      <div class="flex flex-col sm:flex-row sm:items-center text-sm text-gray-600 dark:text-gray-400 mt-1">
        <span class="font-medium" data-i18n-key="institution">Universidad XYZ</span>
        <span class="hidden sm:inline mx-2">•</span>
        <span data-i18n-key="period">2014 - 2018</span>
      </div>
      <p class="mt-2 text-gray-600 dark:text-gray-400" data-i18n-key="description">Formación completa en desarrollo de software, algoritmos y estructuras de datos. Especialización en desarrollo web.</p>
    </div>
    
    <div class="mb-4" data-i18n-group="education.degrees[1]">
      <h3 class="text-xl font-semibold text-gray-800 dark:text-white" data-i18n-key="name">Máster en Desarrollo Web</h3>
      <div class="flex flex-col sm:flex-row sm:items-center text-sm text-gray-600 dark:text-gray-400 mt-1">
        <span class="font-medium" data-i18n-key="institution">Instituto ABC</span>
        <span class="hidden sm:inline mx-2">•</span>
        <span data-i18n-key="period">2018 - 2019</span>
      </div>
      <p class="mt-2 text-gray-600 dark:text-gray-400" data-i18n-key="description">Especialización en tecnologías web modernas, incluyendo frameworks frontend y backend, bases de datos y arquitectura de aplicaciones.</p>
    </div>
  </div>
</section>
