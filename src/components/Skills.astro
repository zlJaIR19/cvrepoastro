---
import "../styles/global.css";
import { getI18n } from "../i18n/utils";

const { lang } = getI18n(Astro.url);
---

<section id="skills" class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white" data-i18n="skills.title">Habilidades técnicas</h2>
  
  <div class="h-1 w-24 bg-blue-600 dark:bg-blue-400 mb-6"></div>
  
  <div class="space-y-4">
    <div class="mb-2" data-i18n-group="skills.technical[0]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">BPMN</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 100%"></div>
      </div>
    </div>
    
    <div class="mb-2" data-i18n-group="skills.technical[1]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">SAP</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 80%"></div>
      </div>
    </div>
    
    <div class="mb-2" data-i18n-group="skills.technical[2]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">Excel</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 80%"></div>
      </div>
    </div>
  </div>
  
  <h2 class="text-2xl font-bold mb-4 mt-8 text-gray-900 dark:text-white" data-i18n="skills.languages.title">Idiomas</h2>
  
  <div class="h-1 w-24 bg-blue-600 dark:bg-blue-400 mb-6"></div>
  
  <div class="space-y-4">
    <div class="mb-2" data-i18n-group="skills.languages.list[0]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">Español</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 100%"></div>
      </div>
    </div>
    
    <div class="mb-2" data-i18n-group="skills.languages.list[1]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">Inglés</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 80%"></div>
      </div>
    </div>
    
    <div class="mb-2" data-i18n-group="skills.languages.list[2]">
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300" data-i18n-key="name">Francés</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
        <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" style="width: 60%"></div>
      </div>
    </div>
  </div>
</section>
