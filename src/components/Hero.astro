---
import "../styles/global.css";
import { getI18n } from "../i18n/utils";

const { lang } = getI18n(Astro.url);
---

<section id="hero" class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
  <div class="flex flex-col">
    <!-- Profile Info -->
    <div class="w-full text-left">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2" data-i18n="hero.name">
        Juan Pérez
      </h1>
      <h2 class="text-xl md:text-2xl text-blue-600 dark:text-blue-400 mb-4" data-i18n="hero.title">Ingeniero Industrial</h2>
      
      <div class="h-1 w-32 bg-blue-600 dark:bg-blue-400 mb-6"></div>
      
      <!-- Contact Info -->
      <div class="flex flex-wrap gap-4 mb-6">
        <a href="tel:+34600000000" class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400" data-i18n-group="hero.contact">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          <span data-i18n-key="phone">+34 600 000 000</span>
        </a>
        <a href="mailto:correo@ejemplo.com" class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400" data-i18n-group="hero.contact">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          <span data-i18n-key="email">correo@ejemplo.com</span>
        </a>
        <a href="https://linkedin.com/in/perfil" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400" data-i18n-group="hero.contact">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          <span data-i18n-key="linkedin">linkedin.com/in/perfil</span>
        </a>
      </div>
      
      <!-- Call to Action -->
      <div class="flex flex-wrap gap-4">
        <a href="#contact" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-300 dark:bg-blue-500 dark:hover:bg-blue-600" data-i18n="hero.contactBtn">Contáctame</a>
        <a href="#" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-md transition-colors duration-300 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white" data-i18n="hero.resumeBtn">Descargar CV</a>
      </div>
    </div>
  </div>
</section>
