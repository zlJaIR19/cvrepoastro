---
import "../styles/global.css";
import { getI18n } from "../i18n/utils";

const { lang } = getI18n(Astro.url);
---

<section id="experience" class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white" data-i18n="experience.title">Experiencia</h2>
  
  <div class="h-1 w-24 bg-blue-600 dark:bg-blue-400 mb-6"></div>
  
  <div class="space-y-6">
    <div class="experience-card" data-i18n-group="experience.job1">
      <div class="flex justify-between items-start">
        <div>
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-xl font-semibold text-primary-600 dark:text-primary-400" data-i18n-key="company">QUIMPAC | Sector Químico Industrial</span>
          </div>
          <h3 class="text-xl font-bold text-gray-800 dark:text-white mt-3 mb-2" data-i18n-key="position">Analista de gestión y mejora de procesos</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4 text-lg" data-i18n-key="period">2019 - Presente</p>
        </div>
        <button class="toggle-details p-1 focus:outline-none" data-target="job1">
          <svg class="w-6 h-6 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
      </div>
      
      <div id="job1" class="details mt-4 hidden">
        <div class="mb-3">
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.responsibilities.title">Responsabilidades</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="responsibilities.items[0]">Modelado de procesos de negocio con BPMN 2.0</li>
            <li data-i18n-key="responsibilities.items[1]">Análisis de cuellos de botella y oportunidades de mejora</li>
            <li data-i18n-key="responsibilities.items[2]">Implementación de soluciones de automatización</li>
          </ul>
        </div>
        
        <div class="mb-3">
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.projects.title">Proyectos</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="projects.items[0]">Rediseño del proceso de atención al cliente</li>
            <li data-i18n-key="projects.items[1]">Implementación de sistema de gestión de procesos</li>
            <li data-i18n-key="projects.items[2]">Desarrollo de KPIs para monitoreo de procesos</li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.achievements.title">Logros</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="achievements.items[0]">Reducción del tiempo de ciclo en un 30%</li>
            <li data-i18n-key="achievements.items[1]">Mejora de la satisfacción del cliente en un 25%</li>
            <li data-i18n-key="achievements.items[2]">Implementación exitosa de automatización en áreas críticas</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="experience-card" data-i18n-group="experience.job2">
      <div class="flex justify-between items-start">
        <div>
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-xl font-semibold text-primary-600 dark:text-primary-400" data-i18n-key="company">Empresa XYZ</span>
          </div>
          <h3 class="text-xl font-bold text-gray-800 dark:text-white mt-3 mb-2" data-i18n-key="position">Analista de Mejora Continua</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4 text-lg" data-i18n-key="period">2018 - 2020</p>
        </div>
        <button class="toggle-details p-1 focus:outline-none" data-target="job2">
          <svg class="w-6 h-6 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
      </div>
      
      <div id="job2" class="details mt-4 hidden">
        <div class="mb-3">
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.responsibilities.title">Responsabilidades</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="responsibilities.items[0]">Análisis de procesos utilizando herramientas Lean</li>
            <li data-i18n-key="responsibilities.items[1]">Implementación de metodologías de mejora continua</li>
            <li data-i18n-key="responsibilities.items[2]">Capacitación de equipos en técnicas de resolución de problemas</li>
          </ul>
        </div>
        
        <div class="mb-3">
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.projects.title">Proyectos</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="projects.items[0]">Optimización de la cadena de suministro</li>
            <li data-i18n-key="projects.items[1]">Implementación de sistema Kanban</li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-700 dark:text-gray-200 mb-2" data-i18n="experience.achievements.title">Logros</h4>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li data-i18n-key="achievements.items[0]">Reducción de inventario en un 20%</li>
            <li data-i18n-key="achievements.items[1]">Disminución de tiempos de espera en un 35%</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle experience details
    const toggleButtons = document.querySelectorAll('.toggle-details');
    
    toggleButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target');
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          targetElement.classList.toggle('hidden');
          
          // Rotate arrow icon
          const svg = this.querySelector('svg');
          if (svg) {
            svg.classList.toggle('rotate-180');
          }
        }
      });
    });
  });
</script>

<style>
  .rotate-180 {
    transform: rotate(180deg);
  }
</style>
