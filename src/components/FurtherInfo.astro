---
import Section from './ui/Section.astro';
import T from './ui/T.astro';
import { getI18n } from '../i18n/utils';

const { lang, t } = getI18n(Astro.url);

// Obtener las traducciones directamente del archivo JSON
const interestsTitle = t('furtherInfo.interests.title');
const hobbiesTitle = t('furtherInfo.hobbies.title');

// Obtener los arrays de intereses y aficiones
const interestsItems = [
  "Diseño de procesos",
  "Mejora continua",
  "Gestión de proyectos",
  "Automatización"
];

const hobbiesItems = [
  "Lectura",
  "Senderismo",
  "Fotografía",
  "Viajes"
];
---

<Section id="furtherInfo" title={t('furtherInfo.title')}>
  <div class="space-y-4">
    <div class="mb-3">
      <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-1">
        {interestsTitle}
      </h3>
      <ul class="list-disc list-inside text-gray-600 dark:text-gray-400 space-y-0.5">
        {interestsItems.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
    
    <div class="mb-3">
      <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-1">
        {hobbiesTitle}
      </h3>
      <ul class="list-disc list-inside text-gray-600 dark:text-gray-400 space-y-0.5">
        {hobbiesItems.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </div>
</Section>
