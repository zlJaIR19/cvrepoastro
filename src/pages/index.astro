---
/**
 * Página principal del portfolio
 * Implementa una estructura mejorada con componentes reutilizables
 */
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import T from '../components/ui/T.astro';
import { getI18n } from '../i18n/utils';

const { t } = getI18n(Astro.url);

// Título de la página
const pageTitle = 'Portfolio - Desarrollador Web';
---

<Layout title={pageTitle}>
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Columna izquierda - Contenido principal -->
      <div class="lg:col-span-8 space-y-8 animate-fade-in">
        
        <!-- Sección Hero -->
        <Section id="about">
          <div class="flex flex-col gap-6">
            <div>
              <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">
                <T key="hero.name">Nombre Apellido</T>
              </h1>
              <h2 class="text-xl text-primary-600 dark:text-primary-400 mb-4">
                <T key="hero.title">Desarrollador Web</T>
              </h2>
              <p class="text-gray-700 dark:text-gray-300 mb-4">
                <T key="hero.description">Descripción profesional breve que destaca habilidades y experiencia.</T>
              </p>
              
              <!-- Intereses como etiquetas -->
              <div class="mt-4">
                <h3 class="text-md font-medium text-gray-800 dark:text-gray-200 mb-2">
                  <T key="hero.interests.title">Intereses</T>:
                </h3>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.bpmn">BPMN</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.lean">Lean</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.process_improvement">Mejora de procesos</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.automation">Automatización</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.methods_engineering">Ingeniería de métodos</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.big_data">Big data</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.ai">IA</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.blockchain">Blockchain</T>
                  </span>
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">
                    <T key="hero.interests.tags.cloud">Cloud computing</T>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </Section>
        
        <!-- Sección Experiencia -->
        <Section id="experience" title={t('experience.title')}>
          <div class="space-y-6">
            <Card variant="elevated" class="animate-slide-in">
              <div>
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="text-xl font-semibold text-primary-600 dark:text-primary-400">{t('experience.job1.company').split('|')[0].trim()}</span>
                  <span class="text-gray-400">|</span>
                  <span class="text-base italic text-gray-600 dark:text-gray-400">{t('experience.job1.company').split('|')[1]?.trim() || ''}</span>
                </div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mt-3 mb-2">{t('experience.job1.position')}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4 text-lg">{t('experience.job1.period')}</p>
              </div>
              <p class="mb-4 text-gray-700 dark:text-gray-300">
                <T key="experience.job1.description">Descripción del puesto y responsabilidades principales.</T>
              </p>
              <div class="space-y-4">
                <!-- Responsabilidades -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job1.responsibilities.title">Responsabilidades</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1, 2].map((i) => (
                      <li><T key={`experience.job1.responsibilities.items.${i}`}>Responsabilidad {i+1}</T></li>
                    ))}
                  </ul>
                </div>
                
                <!-- Proyectos -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job1.projects.title">Proyectos</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1, 2].map((i) => (
                      <li><T key={`experience.job1.projects.items.${i}`}>Proyecto {i+1}</T></li>
                    ))}
                  </ul>
                </div>
                
                <!-- Logros -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job1.achievements.title">Logros</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1, 2].map((i) => (
                      <li><T key={`experience.job1.achievements.items.${i}`}>Logro {i+1}</T></li>
                    ))}
                  </ul>
                </div>
              </div>
            </Card>
            
            <Card variant="elevated" class="animate-slide-in">
              <div>
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="text-xl font-semibold text-primary-600 dark:text-primary-400">{t('experience.job2.company').split('|')[0].trim()}</span>
                  <span class="text-gray-400">|</span>
                  <span class="text-base italic text-gray-600 dark:text-gray-400">{t('experience.job2.company').split('|')[1]?.trim() || ''}</span>
                </div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mt-3 mb-2">{t('experience.job2.position')}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4 text-lg">{t('experience.job2.period')}</p>
              </div>
              <p class="mb-4 text-gray-700 dark:text-gray-300">
                <T key="experience.job2.description">Descripción del puesto y responsabilidades principales.</T>
              </p>
              <div class="space-y-4">
                <!-- Responsabilidades -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job2.responsibilities.title">Responsabilidades</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1, 2].map((i) => (
                      <li><T key={`experience.job2.responsibilities.items.${i}`}>Responsabilidad {i+1}</T></li>
                    ))}
                  </ul>
                </div>
                
                <!-- Proyectos -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job2.projects.title">Proyectos</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1].map((i) => (
                      <li><T key={`experience.job2.projects.items.${i}`}>Proyecto {i+1}</T></li>
                    ))}
                  </ul>
                </div>
                
                <!-- Logros -->
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white mb-2">
                    <T key="experience.job2.achievements.title">Logros</T>:
                  </h4>
                  <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                    {[0, 1].map((i) => (
                      <li><T key={`experience.job2.achievements.items.${i}`}>Logro {i+1}</T></li>
                    ))}
                  </ul>
                </div>
              </div>
            </Card>
          </div>
        </Section>
        
        <!-- Sección Educación -->
        <Section id="education" title={t('education.title')}>
          <div class="space-y-6">
            <Card title="Ingeniería Informática" variant="bordered" class="animate-slide-in">
              <div class="mb-2 text-sm text-gray-600 dark:text-gray-400">
                <span>Universidad XYZ</span> | <span>2014 - 2018</span>
              </div>
              <p class="text-gray-700 dark:text-gray-300">
                <T key="education.description1">Descripción de la carrera y logros académicos destacados.</T>
              </p>
            </Card>
            
            <Card title="Máster en Desarrollo Web" variant="bordered" class="animate-slide-in">
              <div class="mb-2 text-sm text-gray-600 dark:text-gray-400">
                <span>Instituto ABC</span> | <span>2018 - 2019</span>
              </div>
              <p class="text-gray-700 dark:text-gray-300">
                <T key="education.description2">Descripción del máster y especialización.</T>
              </p>
            </Card>
          </div>
        </Section>
        
        <!-- Sección Cursos -->
        <Section id="courses" title={t('courses.title')}>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Card variant="default" class="animate-slide-in">
              <h4 class="font-medium text-gray-900 dark:text-white mb-1">React Avanzado</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Plataforma de Cursos Online</p>
              <p class="text-gray-700 dark:text-gray-300">
                <T key="courses.description1">Descripción del curso y habilidades adquiridas.</T>
              </p>
            </Card>
            
            <Card variant="default" class="animate-slide-in">
              <h4 class="font-medium text-gray-900 dark:text-white mb-1">Desarrollo Full Stack</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Academia de Desarrollo</p>
              <p class="text-gray-700 dark:text-gray-300">
                <T key="courses.description2">Descripción del curso y habilidades adquiridas.</T>
              </p>
            </Card>
          </div>
        </Section>
      </div>
      
      <!-- Columna derecha - Información adicional -->
      <div class="lg:col-span-4 space-y-8">
        <!-- Sección Habilidades -->
        <Section id="skills" title={t('skills.title')}>
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white mb-2">Frontend</h4>
              <div class="flex flex-wrap gap-2">
                <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm">HTML5</span>
                <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm">CSS3</span>
                <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm">JavaScript</span>
                <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm">React</span>
                <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm">TailwindCSS</span>
              </div>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white mb-2">Backend</h4>
              <div class="flex flex-wrap gap-2">
                <span class="bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200 px-3 py-1 rounded-full text-sm">Node.js</span>
                <span class="bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200 px-3 py-1 rounded-full text-sm">Express</span>
                <span class="bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200 px-3 py-1 rounded-full text-sm">MongoDB</span>
              </div>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white mb-2">Herramientas</h4>
              <div class="flex flex-wrap gap-2">
                <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">Git</span>
                <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">Docker</span>
                <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm">VS Code</span>
              </div>
            </div>
          </div>
        </Section>
        
        <!-- Sección Contacto -->
        <Section id="contact" title={t('contact.title')}>
          <Card variant="bordered">
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:ejemplo@email.com" class="text-primary-600 dark:text-primary-400 hover:underline">ejemplo@email.com</a>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span class="text-gray-800 dark:text-gray-200">+34 123 456 789</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-gray-800 dark:text-gray-200">Madrid, España</span>
              </div>
            </div>
          </Card>
        </Section>
        
        <!-- Sección Idiomas -->
        <Section id="languages" title={t('languages.title')}>
          <div class="space-y-3">
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-gray-800 dark:text-gray-200">Español</span>
                <span class="text-gray-600 dark:text-gray-400">Nativo</span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class="bg-primary h-2 rounded-full" style="width: 100%"></div>
              </div>
            </div>
            
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-gray-800 dark:text-gray-200">Inglés</span>
                <span class="text-gray-600 dark:text-gray-400">Avanzado</span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class="bg-primary h-2 rounded-full" style="width: 85%"></div>
              </div>
            </div>
            
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-gray-800 dark:text-gray-200">Francés</span>
                <span class="text-gray-600 dark:text-gray-400">Intermedio</span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class="bg-primary h-2 rounded-full" style="width: 60%"></div>
              </div>
            </div>
          </div>
        </Section>
      </div>
    </div>
  </div>
</Layout>
